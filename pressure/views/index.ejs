<%- include("template/header.ejs") %>
<%- include("template/nav.ejs") %>

<%
    const today = new Date();
    tasks.map((task, i) => {
        const hours = parseInt((parseInt((task.dueDate - today) / 1000)) / 3600);
        console.log(`${task.dueDate}, ${hours}`);
    });
%>

<body>
    <h1>Welcome!</h1>
    <h2>Here's what's due today . . .</h2>
    <div class=container>
        <% tasks.map((task, i) => { %>
            <% if(task.dueDate.toDateString() === today.toDateString()) { %>
                <a href="/tasks/<%= task._id %>">
                    <div class="item" id="<%= i %>">
                        <p>
                            <%= task.name %>                         
                            <%= task.dueDate.toLocaleTimeString() %>
                        </p>
                    </div>
                </a>
            <% } %>
        <% }); %>
    </div>
</body>